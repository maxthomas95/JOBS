CLAUDE_DIR=~/.claude
PORT=8780
WS_PATH=/ws
MOCK_EVENTS=false
STALE_IDLE_MS=300000
STALE_EVICT_MS=900000

# Multi-instance: identify this machine in the office
MACHINE_ID=
MACHINE_NAME=

# Shared auth token: if set, enables authentication for WebSocket and /api/hooks
# Browser clients get the token auto-injected via meta tag; external tools must pass it
JOBS_TOKEN=

# Webhook auth: if set, POST /api/webhooks requires this token
WEBHOOK_TOKEN=

# WebSocket connection limits
WS_MAX_CLIENTS=50
WS_MAX_PER_IP=10

# Hook scripts: where to send hook/webhook events (used by remote machines)
JOBS_URL=http://localhost:8780
