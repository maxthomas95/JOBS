  "bugs": {
    "url": "https://github.com/maxthomas95/JOBS/issues"
  },
  "keywords": [
    "claude-code",
    "pixel-art",
    "visualization",
    "agent",
    "pixi",
    "office",
    "developer-tools"
  ],
  "type": "module",
  "scripts": {
    "dev:client": "vite --port 5173",
